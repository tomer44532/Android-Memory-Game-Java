<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item android:id="@+id/background">
                <layer-list>
                    <item>

                        <shape>
                            <stroke
                                android:width="5dp"
                                android:color="#000"/>
                            <gradient
                                android:startColor="@color/transparent"
                                android:centerColor="@color/transparent"
                                android:centerY="0.5"
                                android:endColor="@color/transparent"

                                android:angle="0"
                                />
                            <corners
                                android:radius="30dp"/>


                        </shape>
                    </item>
                    <item>

                        <shape>

                            <stroke
                                android:width="3dp"
                                android:color="@color/yellow"/>
                            <solid android:color="@color/transparent"/>



                            <corners
                                android:radius="30dp"/>


                        </shape>

                    </item>


                </layer-list>


            </item>
            <item android:id="@+id/progress">
                <layer-list>
                    <item
                        >
                        <clip>
                            <shape>
                                <stroke
                                    android:width="2dp"
                                    android:color="#000" />
                                <gradient
                                    android:startColor="#95A309"
                                    android:centerColor="#AABA11"
                                    android:centerX="0.5"
                                    android:endColor="#D6E820"
                                    android:angle="270" />
                                <corners
                                    android:radius="30dp"/>



                            </shape>
                        </clip>

                    </item>
                    <item>

                        <shape>
                            <stroke
                                android:width="5dp"
                                android:color="#000"/>
                            <gradient
                                android:startColor="@color/transparent"
                                android:centerColor="@color/transparent"
                                android:centerY="0.5"
                                android:endColor="@color/transparent"

                                android:angle="0"
                                />
                            <corners
                                android:radius="30dp"/>


                        </shape>
                    </item>
                    <item>

                        <shape>

                            <stroke
                                android:width="3dp"
                                android:color="@color/yellow"/>
                            <solid android:color="@color/transparent"/>



                            <corners
                                android:radius="30dp"/>


                        </shape>

                    </item>



                </layer-list>


            </item>

        </layer-list>

    </item>
    <item android:state_selected="false">
        <layer-list>
            <item android:id="@+id/background" tools:ignore="DuplicateIds">
                <layer-list>
                    <item>
                        <shape>
                            <stroke
                                android:width="1dp"
                                android:color="#000"/>
                            <gradient
                                android:startColor="@color/transparent"
                                android:centerColor="@color/transparent"
                                android:centerY="0.5"
                                android:endColor="@color/transparent"

                                android:angle="0"
                                />
                            <corners
                                android:radius="30dp"/>


                        </shape>


                    </item>

                </layer-list>


            </item>
            <item>
                <clip>
                    <shape>
                        <stroke
                            android:width="1dp"
                            android:color="#000"/>

                        <gradient
                            android:startColor="#95A309"
                            android:centerColor="#AABA11"
                            android:centerX="0.5"
                            android:endColor="#D6E820"
                            android:angle="270" />
                        <corners
                            android:radius="30dp"/>


                    </shape>
                </clip>

            </item>

        </layer-list>

    </item>

</selector>